<core:View
	controllerName="sap.ui.demo.myFiori.view.StackOvDetail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page
		title="{i18n>DetailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" 
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel>	
				<headerToolbar>
					<Toolbar>
						<Title text="Question Details: "/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox>
						<Text text="" id="titletext" class="sapUiSmallMargin" design="Bold"/>
						<HBox>
							<Text text="Link to question: " class="sapUiSmallMargin"/> 
							<Link text="" id="questionLinktext" class="sapUiSmallMargin" target="_blank"/>
						</HBox>
						<Text text="" id="ownerNametext" class="sapUiSmallMargin"/>
						<Text text="" id="tagtext" class="sapUiSmallMargin"/>
						<Text text="" id="creationDatetext" class="sapUiSmallMargin"/>	
						<Text text="" id="bodytext" class="sapUiSmallMargin"/>		
					</VBox>
				</content>
			</Panel>
		</content>	
	</Page>
</core:View>