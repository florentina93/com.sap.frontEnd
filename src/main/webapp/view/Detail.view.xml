<core:View
	controllerName="sap.ui.demo.myFiori.view.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		id="Detail"
		title="{i18n>DetailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" >
		<VBox>
		<HBox>
		<Label text="Name:"/>
		<Label text="" id="nametext"/>
		</HBox>
		
		
		<HBox>
		<Label text="Link to post:"/>
		<Link text="" id="idtext"/>
		</HBox>
		
		<HBox>
		<Label text="Message:"/>
		<Label text="" id="messagetext" wrapping="false"/>
		</HBox>
		
		<HBox>
		<Label text="Description:"/>
		<Label text="" id="descriptiontext"/>
		</HBox>
		
		
		
		</VBox>
	</Page>
</core:View>