<core:View
	controllerName="sap.ui.demo.myFiori.view.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		id="Detail"
		title="{i18n>DetailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" >
		<VBox>
			<Text text="{FriendName}" />
			<Text text="{FriendAddress}" />
			<Text text="{FriendAge}" />
			<Text text="{FriendWorkPlace}" />
		</VBox>
		
		<VBox>
		<HBox>
		<Label text="Name:"/>
		<Label text="" id="nametext"/>
		</HBox>
		<HBox>
		<Label text="First Name:"/>
		<Label text="" id="firstnametext"/>
		</HBox>
		<HBox>
		<Label text="Hometown:"/>
		<Label text="" id="hometowntext"/>
		</HBox>
		<HBox>
		<Label text="Id:"/>
		<Label text="" id="idtext"/>
		</HBox>
		<HBox>
		<Label text="Birthday:"/>
		<Label text="" id="birthdaytext"/>
		</HBox>
		<HBox>
		<Label text="Gender:"/>
		<Label text="" id="gendertext"/>
		</HBox>
		<HBox>
		<Label text="Sports:"/>
		<Label text="" id="sportstext"/>
		</HBox>
		<HBox>
		<Label text="Work:"/>
		<Label text="" id="worktext"/>
		</HBox>
		<HBox>
		<Label text="Email:"/>
		<Label text="" id="emailtext"/>
		</HBox>
		</VBox>
	</Page>
</core:View>