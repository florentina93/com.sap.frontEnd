<core:View
	controllerName="sap.ui.demo.myFiori.view.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>MasterTitle}" >
		<Bar>
				<contentLeft>
					<SearchField
							id="servlet"
							search="handleSearch"
							width="100%"
							>
					</SearchField>
				</contentLeft>
			</Bar>
			<VBox>
			<Text text="Select the criteria for search"/>
			<HBox>
				<RadioButton id="name" groupName="criteria" text="Name"/>
				<RadioButton id="homeTown" groupName="criteria" text="HomeTown"/> 
				<RadioButton id="workPlace" groupName="criteria" text="WorkPlace"/>
			</HBox>
		</VBox> 
		<VBox>
		<Label text="Name Here" id="nametext" />
		<Label text="Email Here" id="emailtext"/>
		<Label text="Id Here" id="idtext"/>
		<Label text="Birthday Here" id="birthdaytext"/>
		<Label text="Gender Here" id="gendertext"/>
		</VBox>	
		
	</Page>
</core:View>