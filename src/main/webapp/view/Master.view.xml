<core:View
	controllerName="sap.ui.demo.myFiori.view.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>MasterTitle}" >
	
		<Bar>
				<contentLeft>
					<SearchField
							id="servlet"
							search="handleSearch1"
							width="100%"
							>
					</SearchField>
				</contentLeft>
			</Bar>
			<VBox>
			<Text text="Select the criteria for search"/>
			
				<RadioButton id="radioall" groupName="criteria" text="All"/>
				<RadioButton id="radioname" groupName="criteria" text="Name"/>
				<RadioButton id="radiohomeTown" groupName="criteria" text="HomeTown"/> 
				<RadioButton id="radioworkPlace" groupName="criteria" text="WorkPlace"/>
			</VBox>
			
			<List
			id="list"
			items="{/Friends}" 
			mode="{device>/listMode}"
			select="handleListSelect">
			<StandardListItem
				type="Active"
				press="handleListItemPress"
				title="{FriendName}"
			/>
		</List>
	</Page>
</core:View>