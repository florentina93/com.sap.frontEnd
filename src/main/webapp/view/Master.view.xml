<core:View
	controllerName="sap.ui.demo.myFiori.view.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>MasterTitle}">
	
		<Bar>
				<contentLeft>
					<SearchField
							id="servlet"
							search="handleSearch"
							width="100%"
							>
					</SearchField>
				</contentLeft>
			</Bar>
			<VBox>
			<Text text="Select where to search in posts"/>
				<!-- <HBox> -->
				<RadioButton id="radioEverything" groupName="criteria" text="Everything"/>
				<RadioButton id="radioDescription" groupName="criteria" text="Description"/>
				<RadioButton id="radioComments" groupName="criteria" text="Comments"/> 
				<!-- </HBox> -->
			</VBox>
			
			<!-- <FlexBox
			alignItems="End"
			>
				<BusyIndicator 
					id="busyIndicator"
					class="sapUiSmallMarginBottom"
					visible="false"
					/>
				<HBox
					justifyContent="Start"
					alignItems="Center" >
					<BusyIndicator size="1.4em" />
					<BusyIndicator size="3em" />
					<BusyIndicator size="4.6em" />
					<BusyIndicator size="3em" />
					<BusyIndicator size="1.4em" />
				</HBox>
			</FlexBox> -->
			<List
			id="list"
			items="{/PostDetails}" 
			mode="{device>/listMode}"
			select="handleListSelect"
			showNoData="false"
			>
			<StandardListItem
				type="Active"
				press="handleListItemPress"
				title="{name}"
			/>
		</List>
	</Page>
</core:View>