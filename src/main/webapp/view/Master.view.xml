<core:View
	controllerName="sap.ui.demo.myFiori.view.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>MasterTitle}" >
	
		<Bar>
				<contentLeft>
					<SearchField
							id="servlet"
							search="handleSearch1"
							width="100%"
							>
					</SearchField>
				</contentLeft>
			</Bar>
			<VBox>
			<Text text="Select where to search in posts"/>
		<!-- 	<HBox> -->
				<RadioButton id="radioall" groupName="criteria" text="Everything"/>
				<RadioButton id="radiodescription" groupName="criteria" text="Description"/>
				<RadioButton id="radiocomments" groupName="criteria" text="Comments"/> 
		<!-- 	</HBox> -->
			</VBox>
			
			<List
			id="list"
			items="{/Friends}" 
			mode="{device>/listMode}"
			select="handleListSelect">
			<StandardListItem
				type="Active"
				press="handleListItemPress"
				title="{name}"
			/>
		</List>
	</Page>
</core:View>