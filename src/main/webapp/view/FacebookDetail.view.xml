<core:View
	controllerName="sap.ui.demo.myFiori.view.FacebookDetail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page
		title="{i18n>DetailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel>	
				<headerToolbar>
					<Toolbar>
						<Title text="Post Details: "/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox>			
						<Text text="" id="nametext" class="sapUiSmallMargin" design="Bold"/>
						<HBox>
							<Text text="Link to post: " class="sapUiSmallMargin" />
							<Link text="" id="idtext" class="sapUiSmallMargin" target="_blank"/>				
						</HBox>		
						<Text text="" id="messagetext" class="sapUiSmallMargin"/>
						<Text text="" id="descriptiontext" class="sapUiSmallMargin"/>
					</VBox>
				</content>
			</Panel>
		</content>					
	</Page>
</core:View>