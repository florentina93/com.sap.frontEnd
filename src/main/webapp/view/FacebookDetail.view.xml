<core:View
	controllerName="sap.ui.demo.myFiori.view.FacebookDetail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Page
		title="{i18n>DetailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel>	
				<headerToolbar>
					<Toolbar>
						<Title text="Post Details: "/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm>
						<f:content>
							<VBox>			
								<Label text="" id="nametext" class="sapUiSmallMargin" design="Bold"/>
								<Link text="" id="idtext" class="sapUiSmallMargin"/>
								<Label text="" id="messagetext" wrapping="false" class="sapUiSmallMargin"/>
								<Label text="" id="descriptiontext" class="sapUiSmallMargin"/>
							</VBox>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>					
	</Page>
</core:View>